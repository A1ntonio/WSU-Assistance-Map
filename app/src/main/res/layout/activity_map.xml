<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.map.MapActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fabMenu1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp"
        fab:menu_animationDelayPerItem="55"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="@color/colorAccent"
        fab:menu_colorPressed="@color/colorPrimary"
        fab:menu_colorRipple="#99d4d4d4"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_labels_colorNormal="#333"
        fab:menu_labels_colorPressed="#444"
        fab:menu_labels_colorRipple="#66efecec"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_position="right"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="#f2f1f1"
        fab:menu_labels_textSize="15sp"
        fab:menu_openDirection="up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_gandaba"
            app:fab_colorNormal="#269AFF"
            app:fab_colorPressed="@color/colorPrimary"
            app:fab_label="Gandaba Campus"
            app:fab_size="mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_location_city_24" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_otona"
            app:fab_colorNormal="#269AFF"
            app:fab_colorPressed="@color/colorPrimary"
            app:fab_label="Otona Campus"
            app:fab_size="mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_location_city_24" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_my_loc"
            app:fab_colorNormal="#1DB302"
            app:fab_colorPressed="@color/colorPrimary"
            app:fab_label="My Location"
            app:fab_size="mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_my_location_24" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_view"
            app:fab_colorNormal="#1DB302"
            app:fab_colorPressed="@color/colorPrimary"
            app:fab_label="Map Type"
            app:fab_size="mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_landscape_24" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_route1"
            app:fab_colorNormal="#FFE262"
            app:fab_colorPressed="@color/colorPrimary"
            app:fab_label="Navigate"
            app:fab_size="mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_alt_route_24" />


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_share1"
            app:fab_colorNormal="#FFE262"
            app:fab_colorPressed="@color/colorPrimary"
            app:fab_label="Share"
            app:fab_size="mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_share_24" />


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_save1"
            app:fab_colorNormal="#FF001D"
            app:fab_colorPressed="@color/colorPrimary"
            app:fab_label="Save"
            app:fab_size="mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_save_alt_24" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_info"
            app:fab_colorNormal="#FF001D"
            app:fab_colorPressed="@color/colorPrimary"
            app:fab_label="Info"
            app:fab_size="mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_info_24" />


    </com.github.clans.fab.FloatingActionMenu>

</androidx.constraintlayout.widget.ConstraintLayout>